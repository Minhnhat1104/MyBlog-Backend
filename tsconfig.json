{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "ES2023",
    // "lib": ["ES2020"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["*"]
    },
    "strict": true,
    "esModuleInterop": true
    // "ignoreDeprecations": "6.0"
  },
  "include": ["./src/**/*", "./prisma.config.ts"]
}
