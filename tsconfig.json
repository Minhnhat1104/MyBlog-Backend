{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "src",
    "rootDir": "src",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}
